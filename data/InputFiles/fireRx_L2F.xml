    <xStart> 700.0 </xStart> <!--meters-->
    <yStart> 700.0 </yStart> <!--meters-->
    <length> 10.0 </length> <!--meters-->
    <width>  1.0 </width> <!--meters-->
    <courant> 0.25 </courant>
</fires>
