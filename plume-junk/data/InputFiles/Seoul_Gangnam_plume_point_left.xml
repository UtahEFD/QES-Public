<simulationParameters>
  <CourantNumber> 0.1 </CourantNumber>
  <simDur> 1000.0 </simDur><!-- this is the amount of time to run the simulation -->
  <timeStep> 0.1 </timeStep><!-- this is the overall integration timestep -->
  <invarianceTol> 1e-10 </invarianceTol>     <!-- tolerance in makeRealizeable on the stress tensor -->
  <C_0> 4.0 </C_0><!-- this is used to separate out CoEps into its separate parts when doing debug output -->
  <updateFrequency_particleLoop> 10000 </updateFrequency_particleLoop> <!-- Only used in debug mode. -->
  <updateFrequency_timeLoop> 100 </updateFrequency_timeLoop> <!-- this is used to know how frequently to print out information during the time integration loop of the solver -->
</simulationParameters>
<collectionParameters><!-- collecting output parameters -->
  <timeAvgStart> 0.0 </timeAvgStart>   <!-- time to start concentration averaging -->
  <timeAvgFreq> 100.0 </timeAvgFreq>   <!-- time averaging frequency and output frequency -->
  <boxBoundsX1> 0.0 </boxBoundsX1>
  <boxBoundsX2> 5000.0 </boxBoundsX2>
  <boxBoundsY1> 0.0 </boxBoundsY1>
  <boxBoundsY2> 2000.0 </boxBoundsY2>
  <boxBoundsZ1> 0.0 </boxBoundsZ1>
  <boxBoundsZ2> 200.0 </boxBoundsZ2>
  <nBoxesX> 1000 </nBoxesX>
  <nBoxesY> 400 </nBoxesY>
  <nBoxesZ> 40 </nBoxesZ>
</collectionParameters>
<sources><!-- this is the source input -->
  <numSources> 1 </numSources><!-- number of sources, you fill in source information for each source next -->
  <SourcePoint><!-- source type -->
    <ReleaseType_continuous>
      <parPerTimestep>10</parPerTimestep>
    </ReleaseType_continuous>
    <posX> 200.0 </posX>
    <posY> 1200.0 </posY>
    <posZ> 60.0 </posZ>
  </SourcePoint>
</sources>
<boundaryConditions>
  <xBCtype>exiting</xBCtype>
  <yBCtype>exiting</yBCtype>
  <zBCtype>exiting</zBCtype>
  <wallReflection>stairstepReflection</wallReflection>  <!-- type of wall reflection: doNothing; setInactive; stairstepReflection -->
  <doDepositions>false</doDepositions>
</boundaryConditions>
