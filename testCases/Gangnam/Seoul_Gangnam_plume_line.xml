<simulationParameters>
  <CourantNumber> 1 </CourantNumber>
  <simDur> 1000.0 </simDur><!-- this is the amount of time to run the simulation, lets you have an arbitrary start time to an arbitrary end time -->
  <timeStep> 0.1 </timeStep><!-- this is the overall integration timestep -->
  <invarianceTol> 1e-10 </invarianceTol>     <!-- this is the tolerance used to determine whether makeRealizeable should be run on the stress tensor for a particle -->
  <C_0> 4.0 </C_0><!-- this is used to separate out CoEps into its separate parts when doing debug output -->
  <updateFrequency_particleLoop> 10000 </updateFrequency_particleLoop> <!-- this is used to know how frequently to print out information during the particle loop of the solver. Only used during debug mode. -->
  <updateFrequency_timeLoop> 100 </updateFrequency_timeLoop> <!-- this is used to know how frequently to print out information during the time integration loop of the solver -->
</simulationParameters>
<collectionParameters><!-- this is for collecting output from Lagrangian particle values to Eulerian values like concentration -->
  <timeAvgStart> 0.0 </timeAvgStart>      <!-- time to start concentration averaging, not the time to start output. Adjusted if the time averaging duration does not divide evenly by the averaging frequency -->
  <timeAvgFreq> 100.0 </timeAvgFreq><!-- time averaging frequency and output frequency -->
  <boxBoundsX1> 2200.0 </boxBoundsX1>
  <boxBoundsX2> 4700.0 </boxBoundsX2>
  <boxBoundsY1> 1500.0 </boxBoundsY1>
  <boxBoundsY2> 2500.0 </boxBoundsY2>
  <boxBoundsZ1> 0.0 </boxBoundsZ1>
  <boxBoundsZ2> 200.0 </boxBoundsZ2>
  <nBoxesX> 500 </nBoxesX>
  <nBoxesY> 200 </nBoxesY>
  <nBoxesZ> 40 </nBoxesZ>
</collectionParameters>
<sources><!-- this is the source input. Eventually the GUI can help to set up everything, always converting it into some form of a point source using builtin tools. -->
  <numSources> 1 </numSources><!-- number of sources, you fill in source information for each source next -->
  <SourceLine>
    <ReleaseType_continuous>
      <parPerTimestep>20</parPerTimestep>
    </ReleaseType_continuous>
    <posX_0> 2300 </posX_0>
    <posY_0> 2100 </posY_0>
    <posZ_0> 60 </posZ_0>
    <posX_1> 2400 </posX_1>
    <posY_1> 1900 </posY_1>
    <posZ_1> 60 </posZ_1>
  </SourceLine>
</sources>
<boundaryConditions>
    <xDomainStartBCtype>exiting</xDomainStartBCtype>
    <xDomainEndBCtype>exiting</xDomainEndBCtype>
    <yDomainStartBCtype>exiting</yDomainStartBCtype>
    <yDomainEndBCtype>exiting</yDomainEndBCtype>
    <zDomainStartBCtype>exiting</zDomainStartBCtype>
    <zDomainEndBCtype>exiting</zDomainEndBCtype>
    <buildingCutCell_reflectionType>simpleStairStep</buildingCutCell_reflectionType>
    <terrainCutCell_reflectionType>simpleStairStep</terrainCutCell_reflectionType>
    <doDepositions>false</doDepositions>
</boundaryConditions>
