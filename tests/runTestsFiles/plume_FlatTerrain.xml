    <nBoxesY> 40 </nBoxesY>
    <nBoxesZ> 40 </nBoxesZ>
  </collectionParameters>
  <particleParameters>
    <particleTraces>
      <tag>tracer</tag>
      <source>
        <releaseType_continuous>
          <particlePerTimestep> 100 </particlePerTimestep>
        </releaseType_continuous>
        <sourceGeometry_Point>
          <posX> 20.0 </posX>
          <posY> 100.0 </posY>
          <posZ> 100.0 </posZ>
        </sourceGeometry_Point>
      </source>
    </particleTraces>
  </particleParameters>
  <boundaryConditions>
    <xBCtype>exiting</xBCtype>
    <yBCtype>exiting</yBCtype>
    <zBCtype>reflection</zBCtype>
    <wallReflection>doNothing</wallReflection>
  </boundaryConditions>
