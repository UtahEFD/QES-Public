<QESPlumeParameters>
  <plumeParameters>
    <simDur> 1000.0 </simDur>
    <timeStep> 1.0 </timeStep>
    <CourantNumber> 0.25 </CourantNumber>
    <invarianceTol> 1e-10 </invarianceTol>
    <C_0> 1.0 </C_0>
    <updateFrequency_particleLoop> 10000 </updateFrequency_particleLoop>
    <updateFrequency_timeLoop> 60 </updateFrequency_timeLoop>
  </plumeParameters>
  <particleOutputParameters>
    <outputFrequency> 100  </outputFrequency>
    <outputFields>all</outputFields>
  </particleOutputParameters>
  <collectionParameters>
    <timeAvgStart> 200.0 </timeAvgStart>
    <timeAvgFreq> 200.0 </timeAvgFreq>
    <boxBoundsX1> 0.0 </boxBoundsX1>
    <boxBoundsX2> 200.0 </boxBoundsX2>
    <boxBoundsY1> 0.0 </boxBoundsY1>
    <boxBoundsY2> 200.0 </boxBoundsY2>
    <boxBoundsZ1> 0.0 </boxBoundsZ1>
    <boxBoundsZ2> 200.0 </boxBoundsZ2>
    <nBoxesX> 40 </nBoxesX>
    <nBoxesY> 40 </nBoxesY>
    <nBoxesZ> 40 </nBoxesZ>
  </collectionParameters>
  <particleParameters>
    <heavyParticle>
      <tag>heavy</tag>
      <particleDensity> 2.0 </particleDensity>
      <particleDiameter> 5 </particleDiameter>
      <depositionFlag>false</depositionFlag>
      <decayConst> 0.0 </decayConst>
      <source>
        <releaseType_continuous>
          <massPerSec> 5 </massPerSec>
          <particlePerTimestep> 100 </particlePerTimestep>
        </releaseType_continuous>
        <sourceGeometry_Line>
          <posX_0> 20.0 </posX_0>
          <posY_0> 50.0 </posY_0>
          <posZ_0> 20.0 </posZ_0>
          <posX_1> 20.0 </posX_1>
          <posY_1> 150.0 </posY_1>
          <posZ_1> 20.0 </posZ_1>
        </sourceGeometry_Line>
      </source>
    </heavyParticle>
  </particleParameters>
  <boundaryConditions>
    <xBCtype>exiting</xBCtype>
    <yBCtype>exiting</yBCtype>
    <zBCtype>reflection</zBCtype>
    <wallReflection>stairstepReflection</wallReflection>
  </boundaryConditions>
</QESPlumeParameters>

